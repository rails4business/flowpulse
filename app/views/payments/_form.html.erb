<%= form_with(model: payment, class: "contents") do |form| %>
  <% if payment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul class="list-disc ml-6">
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :contact_id %>
    <%= form.text_field :contact_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": payment.errors[:contact_id].none?, "border-red-400 focus:outline-red-600": payment.errors[:contact_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :payable_id %>
    <%= form.text_field :payable_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": payment.errors[:payable_id].none?, "border-red-400 focus:outline-red-600": payment.errors[:payable_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :method %>
    <%= form.number_field :method, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": payment.errors[:method].none?, "border-red-400 focus:outline-red-600": payment.errors[:method].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.number_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": payment.errors[:status].none?, "border-red-400 focus:outline-red-600": payment.errors[:status].any?}] %>
  </div>

  <div class="my-5">
