  </div>

  <div class="my-5">
    <%= form.label :paid_at %>
    <%= form.datetime_field :paid_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": payment.errors[:paid_at].none?, "border-red-400 focus:outline-red-600": payment.errors[:paid_at].any?}] %>
