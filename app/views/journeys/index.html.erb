  <%= link_to "Template", journeys_path(filter: :templates), class: "px-3 py-1 rounded-full border bg-amber-50 text-amber-800" %>
  <%= link_to "Istanze Cicle", journeys_path(filter: :instance_cycle), class: "px-3 py-1 rounded-full border bg-emerald-50 text-emerald-800" %>
</div>
