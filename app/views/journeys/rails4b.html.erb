<% content_for :title, "Area Rails4B – #{@journey.title}" %>

<div class="max-w-5xl mx-auto space-y-6 py-8 px-6">
  <div class="flex items-center justify-between gap-3">
    <div>
      <p class="text-xs uppercase tracking-wide text-slate-500">Coordinamento journey</p>
      <h1 class="text-3xl font-bold text-slate-900"><%= @journey.title %></h1>
    </div>
    <%= link_to "← Torna alla scheda", journey_path(@journey), class: "text-sm text-blue-600 hover:underline" %>
  </div>

  <div class="grid gap-4 md:grid-cols-3">
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-slate-500">Service</p>
      <% if @service.present? %>
        <p class="mt-1 text-sm">
          <%= link_to @service.name.presence || "Service ##{@service.id}", superadmin_service_path(@service), class: "text-blue-600 hover:underline" %>
        </p>
      <% else %>
        <p class="mt-1 text-sm text-slate-500">Non associato a un service.</p>
      <% end %>
    </div>
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-slate-500">Taxbranch</p>
      <% if @taxbranch.present? %>
        <p class="mt-1 text-sm">
          <%= link_to @taxbranch.display_label, superadmin_taxbranch_path(@taxbranch), class: "text-blue-600 hover:underline" %>
        </p>
      <% else %>
        <p class="mt-1 text-sm text-slate-500">Nessun ramo collegato.</p>
      <% end %>
    </div>
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-slate-500">Progress</p>
      <p class="mt-1 text-3xl font-semibold text-slate-900"><%= @journey.computed_progress %>%</p>
    </div>
  </div>
  <div class="rounded-xl border border-amber-200 bg-amber-50 p-4 shadow-sm">
    <p class="text-xs uppercase tracking-wide text-amber-800">Costi officina</p>
    <p class="mt-2 text-2xl font-semibold text-amber-900"><%= number_to_currency(@production_cost_euro, unit: "€") %></p>
    <p class="text-xs text-amber-800 mt-1">Tempo: <%= (@production_minutes.to_f / 60).round(1) %> h</p>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Eventi del journey</h2>
    <% if @eventdates.any? %>
      <ul class="divide-y divide-slate-100">
        <% @eventdates.each do |event| %>
          <li class="py-3">
            <p class="font-medium text-slate-900">
              <%= l(event.date_start, format: :long) rescue "Data da definire" %>
              <% if event.date_end.present? %>
                · <%= l(event.date_end, format: :time) rescue nil %>
              <% end %>
            </p>
            <p class="text-xs text-slate-500"><%= event.description.presence || "Evento" %></p>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-slate-500">Nessun evento pianificato.</p>
    <% end %>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Commitment / risorse</h2>
    <% if @commitments.any? %>
      <table class="min-w-full text-sm">
        <thead>
          <tr class="text-left text-xs uppercase tracking-wide text-slate-500">
            <th class="py-2">Descrizione</th>
            <th class="py-2">Taxbranch</th>
            <th class="py-2">Evento</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% @commitments.each do |commitment| %>
            <tr>
              <td class="py-2 text-slate-800"><%= commitment.role_name || "Commitment ##{commitment.id}" %></td>
              <td class="py-2 text-slate-600"><%= commitment.taxbranch&.display_label || "-" %></td>
              <td class="py-2 text-slate-600"><%= commitment.eventdate&.description || "-" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-sm text-slate-500">Nessuna risorsa pianificata.</p>
    <% end %>
  </div>
</div>
