<% content_for :title, "Genera Impresa – #{@journey.title}" %>

<div class="max-w-5xl mx-auto space-y-6 py-8 px-6">
  <div class="flex items-center justify-between gap-3">
    <div>
      <p class="text-xs uppercase tracking-wide text-slate-500">Indicatori journey</p>
      <h1 class="text-3xl font-bold text-slate-900"><%= @journey.title %></h1>
    </div>
    <%= link_to "← Torna alla scheda", journey_path(@journey), class: "text-sm text-blue-600 hover:underline" %>
  </div>

  <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-slate-500">Iscrizioni</p>
      <p class="mt-2 text-3xl font-semibold text-slate-900"><%= @enrollments_count %></p>
    </div>
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-slate-500">Booking</p>
      <p class="mt-2 text-3xl font-semibold text-slate-900"><%= @bookings_count %></p>
    </div>
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-slate-500">Certificati</p>
      <p class="mt-2 text-3xl font-semibold text-slate-900"><%= @certificates_count %></p>
    </div>
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-slate-500">Progress medio</p>
      <p class="mt-2 text-3xl font-semibold text-slate-900"><%= @journey.computed_progress %>%</p>
    </div>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm space-y-4">
    <div>
      <h2 class="text-lg_font-semibold text-slate-900">Rami Genera Impresa collegati</h2>
      <% if @generaimpresa_branches.any? %>
        <ul class="space-y-2 text-sm mt-2">
          <% @generaimpresa_branches.each do |branch| %>
            <li><%= link_to branch.display_label, superadmin_taxbranch_path(branch), class: "text-blue-600 hover:underline" %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-sm text-slate-500 mt-2">Nessuna campagna collegata a questo journey.</p>
      <% end %>
    </div>
    <div>
      <h2 class="text-lg font-semibold text-slate-900">Rami Rails4B collegati</h2>
      <% if @rails4b_branches.any? %>
        <ul class="space-y-2 text-sm mt-2">
          <% @rails4b_branches.each do |branch| %>
            <li><%= link_to branch.display_label, superadmin_taxbranch_path(branch), class: "text-blue-600 hover:underline" %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-sm text-slate-500 mt-2">Nessun ramo officina collegato.</p>
      <% end %>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-3">
    <div class="rounded-xl border border-amber-200 bg-amber-50 p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-amber-800">Costi officina</p>
      <p class="mt-2 text-3xl font-semibold text-amber-900"><%= number_to_currency(@production_cost_euro, unit: "€") %></p>
      <p class="text-xs text-amber-800 mt-1">Tempo: <%= (@production_minutes.to_f / 60).round(1) %> h</p>
    </div>
    <div class="rounded-xl border border-emerald-200 bg-emerald-50 p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-emerald-800">Ricavi iscrizioni</p>
      <p class="mt-2 text-3xl font-semibold text-emerald-900"><%= number_to_currency(@enrollment_revenue_euro, unit: "€") %></p>
    </div>
    <div class="rounded-xl border border-emerald-200 bg-emerald-50 p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-emerald-800">Ricavi booking</p>
      <p class="mt-2 text-3xl font-semibold text-emerald-900"><%= number_to_currency(@booking_revenue_euro, unit: "€") %></p>
      <p class="text-xs text-emerald-800 mt-1">Totale pubblico: <%= number_to_currency(@public_revenue_euro, unit: "€") %></p>
    </div>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Dettaglio iscrizioni</h2>
    <% if @enrollments.any? %>
      <table class="min-w-full text-sm">
        <thead>
          <tr class="text-left text-xs uppercase tracking-wide text-slate-500">
            <th class="py-2">Contatto</th>
            <th class="py-2">Ruolo</th>
            <th class="py-2">Stato</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
          <% @enrollments.each do |enrollment| %>
            <tr>
              <td class="py-2 text-slate-800"><%= enrollment.mycontact&.full_name rescue "Mycontact ##{enrollment.mycontact_id}" %></td>
              <td class="py-2 text-slate-600"><%= enrollment.role_name.presence || "-" %></td>
              <td class="py-2 text-slate-600"><%= enrollment.status.humanize %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-sm text-slate-500">Ancora nessuna iscrizione registrata.</p>
    <% end %>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Partecipanti per ruolo</h2>
    <% if @participants_per_role.any? %>
      <ul class="space-y-2 text-sm text-slate-700">
        <% @participants_per_role.each do |role, count| %>
          <li class="flex items-center justify-between">
            <span><%= role.presence || "(senza ruolo)" %></span>
            <span class="font-semibold"><%= count %></span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-slate-500">Nessun ruolo ancora assegnato.</p>
    <% end %>
  </div>
</div>
