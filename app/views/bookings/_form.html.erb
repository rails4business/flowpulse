<%= form_with(model: booking, class: "contents") do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul class="list-disc ml-6">
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :service_id %>
    <%= form.text_field :service_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:service_id].none?, "border-red-400 focus:outline-red-600": booking.errors[:service_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :eventdate_id %>
    <%= form.text_field :eventdate_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:eventdate_id].none?, "border-red-400 focus:outline-red-600": booking.errors[:eventdate_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :contact_id %>
    <%= form.text_field :contact_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:contact_id].none?, "border-red-400 focus:outline-red-600": booking.errors[:contact_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :enrollment_id %>
    <%= form.text_field :enrollment_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:enrollment_id].none?, "border-red-400 focus:outline-red-600": booking.errors[:enrollment_id].any?}] %>
  </div>

   <div class="my-5">
    <%= form.label :commitment_id, "Step / commitment" %>
    <%= form.collection_select :commitment_id,
          Commitment.order(:id), :id, :role_name,
          { include_blank: "Seleziona uno step" },
          class: [
            "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
            {
              "border-gray-400 focus:outline-blue-600" => booking.errors[:commitment_id].none?,
              "border-red-400 focus:outline-red-600"   => booking.errors[:commitment_id].any?
            }
          ] %>
  </div>


  <div class="my-5">
    <%= form.label :status %>
    <%= form.number_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:status].none?, "border-red-400 focus:outline-red-600": booking.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :mode %>
    <%= form.number_field :mode, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:mode].none?, "border-red-400 focus:outline-red-600": booking.errors[:mode].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :participant_role %>
    <%= form.number_field :participant_role, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:participant_role].none?, "border-red-400 focus:outline-red-600": booking.errors[:participant_role].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :requested_by_lead_id %>
    <%= form.text_field :requested_by_lead_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:requested_by_lead_id].none?, "border-red-400 focus:outline-red-600": booking.errors[:requested_by_lead_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :invited_by_lead_id %>
    <%= form.text_field :invited_by_lead_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:invited_by_lead_id].none?, "border-red-400 focus:outline-red-600": booking.errors[:invited_by_lead_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price_euro %>
    <%= form.text_field :price_euro, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:price_euro].none?, "border-red-400 focus:outline-red-600": booking.errors[:price_euro].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :price_dash %>
    <%= form.text_field :price_dash, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:price_dash].none?, "border-red-400 focus:outline-red-600": booking.errors[:price_dash].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:notes].none?, "border-red-400 focus:outline-red-600": booking.errors[:notes].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :meta %>
    <%= form.text_field :meta, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": booking.errors[:meta].none?, "border-red-400 focus:outline-red-600": booking.errors[:meta].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
