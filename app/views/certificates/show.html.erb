<% content_for :title, "Showing certificate" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing certificate</h1>

  <% if @certificate.inferred_domain.present? || @certificate.domain_membership_id.present? %>
    <div class="mt-4 mb-4 rounded-lg border border-slate-200 bg-slate-50 p-4">
      <h2 class="text-sm font-semibold text-slate-800">Domain</h2>
      <p class="mt-1 text-sm text-slate-700">
        <strong>Domain:</strong>
        <% if @certificate.inferred_domain.present? %>
          <%= @certificate.inferred_domain.host %>
          (ID <%= @certificate.inferred_domain.id %>)
        <% else %>
          —
        <% end %>
      </p>
      <p class="text-sm text-slate-700">
        <strong>Domain membership:</strong> <%= @certificate.domain_membership_id || "—" %>
      </p>
    </div>
  <% end %>

  <%= render @certificate %>

  <%= link_to "Edit this certificate", edit_certificate_path(@certificate), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Back to certificates", certificates_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Destroy this certificate", @certificate, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
