<!-- app/views/pages/_child_card.html.erb -->

<% if child.post.present?  %>
<div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm hover:shadow transition">
  <h2 class="text-lg font-semibold mb-1">
 
  

    <%= link_to (child.slug_label.presence.tr("-", " ").humanize || child.slug.tr("-", " ").humanize), post_path(child.post), class: "hover:underline" %>

  </h2>

  <% if child.description.present? %>
    <p class="text-sm text-slate-600 mb-3"><%= child.description %></p>
  <% end %>

  <%= link_to "Apri", superadmin_taxbranch_path(child),
      class: "inline-block text-sm px-3 py-1.5 rounded-md bg-slate-900 text-white hover:bg-slate-800" %>
</div>
<% else %>

<% if Current.user&.superadmin == true %>
  


<div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm hover:shadow transition">
  <h2 class="text-lg font-semibold mb-1">
 
  

    <%= link_to (child.slug_label.presence.tr("-", " ").humanize || child.slug.tr("-", " ").humanize), superadmin_taxbranch_path(child), class: "hover:underline" %>

  </h2>

  <% if child.description.present? %>
    <p class="text-sm text-slate-600 mb-3"><%= child.description %></p>
  <% end %>

  <%= link_to "Apri", superadmin_taxbranch_path(child),
      class: "inline-block text-sm px-3 py-1.5 rounded-md bg-slate-900 text-white hover:bg-slate-800" %>
</div>
<% end %>
 <% end %>
