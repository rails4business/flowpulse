
<%# locals: mycontact: %>
<% dc = mycontact.datacontact %>

<div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
  <div class="flex items-start justify-between gap-4">
    <div class="min-w-0">
      <div class="flex items-center gap-2">
        <h3 class="truncate text-base font-semibold text-slate-900">
          <%= dc.display_label %>
        </h3>

        <%# Badge stato relazione %>
        <% if mycontact.approved? %>
          <span class="inline-flex items-center rounded-full bg-emerald-50 px-2 py-0.5 text-xs font-medium text-emerald-700">
            Approved
          </span>
        <% elsif mycontact.pending? %>
          <span class="inline-flex items-center rounded-full bg-amber-50 px-2 py-0.5 text-xs font-medium text-amber-700">
            Pending
          </span>
        <% elsif mycontact.rejected? %>
          <span class="inline-flex items-center rounded-full bg-rose-50 px-2 py-0.5 text-xs font-medium text-rose-700">
            Rejected
          </span>
        <% end %>

        <%# Badge original %>
        <% if mycontact.original? %>
          <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-700">
            Originale
          </span>
        <% end %>
      </div>

      <div class="mt-2 flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-slate-600">
        <% if dc.email.present? %>
          <span class="truncate">
            <span class="text-slate-400">âœ‰ï¸Ž</span>
            <%= mail_to dc.email, dc.email, class: "hover:underline" %>
          </span>
        <% end %>

        <% if dc.phone.present? %>
          <span class="truncate">
            <span class="text-slate-400">â˜Žï¸Ž</span>
            <%= dc.phone %>
          </span>
        <% end %>

        <% if dc.date_of_birth.present? %>
          <span class="truncate">
            <span class="text-slate-400">ðŸŽ‚</span>
            <%= l(dc.date_of_birth) %>
          </span>
        <% end %>
      </div>

      <%# info proprietÃ /permessi %>
      <div class="mt-3 text-xs text-slate-500">
        <% if dc.lead_id.present? %>
          Owner: <span class="font-medium text-slate-700">Lead #<%= dc.lead_id %></span>
        <% else %>
          Owner: <span class="font-medium text-slate-700">non assegnato</span>
        <% end %>

        <% if dc.referent_lead_id.present? %>
          Â· Referente: <span class="font-medium text-slate-700">Lead #<%= dc.referent_lead_id %></span>
        <% end %>
      </div>
    </div>

    <div class="shrink-0 flex flex-col items-end gap-2">
      <%= link_to "Apri",
          mycontact_path(mycontact),
          class: "inline-flex items-center rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-sm font-medium text-slate-700 hover:bg-slate-50" %>

      <%= link_to "Modifica",
          edit_mycontact_path(mycontact),
          class: "inline-flex items-center rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-sm font-medium text-slate-700 hover:bg-slate-50" %>

      <%= button_to "Rimuovi",
          mycontact_path(mycontact),
          method: :delete,
          data: { turbo_confirm: "Rimuovere il collegamento?" },
          class: "inline-flex items-center rounded-lg bg-rose-600 px-3 py-1.5 text-sm font-semibold text-white hover:bg-rose-700" %>
    </div>
  </div>

  <%# Callout permessi %>
  <% if mycontact.pending? && !mycontact.original? %>
    <div class="mt-4 rounded-lg border border-amber-200 bg-amber-50 p-3 text-sm text-amber-900">
      Questo contatto esiste giÃ  ed Ã¨ di un altro lead.
      Puoi richiedere/attendere approvazione per accedere ai suoi dati.
    </div>
  <% end %>
</div>




