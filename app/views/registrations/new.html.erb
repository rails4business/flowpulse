<%# app/views/registrations/new.html.erb %>
<%= render 'shared/nav_partial_post' %>
<br><br>
<%# app/views/registrations/new.html.erb %>

<% active_tab = 'signup' %>

<div class="mx-auto md:w-2/3 w-full">
  <div class="border-b border-slate-200 mb-6">
    <nav class="-mb-px flex space-x-6" aria-label="Tabs">
      <%= link_to new_session_path,
        class: "whitespace-nowrap border-b-2 px-1 py-2 text-sm font-medium " +
               (active_tab == 'login' ?
                 "border-blue-600 text-blue-700" :
                 "border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300") do %>
        Ho un account
      <% end %>

      <%= link_to new_registration_path,
        class: "whitespace-nowrap border-b-2 px-1 py-2 text-sm font-medium " +
               (active_tab == 'signup' ?
                 "border-blue-600 text-blue-700" :
                 "border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300") do %>
        Crea un account
      <% end %>
    </nav>
  </div>

  <% if flash[:notice] %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-lg inline-block"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-600 font-medium rounded-lg inline-block"><%= flash[:alert] %></p>
  <% end %>

  <div class="max-w-xl mx-auto p-8 bg-white shadow-lg rounded-2xl border border-slate-200">
    <h1 class="text-3xl font-bold text-slate-800 mb-2">Crea un account</h1>
    <p class="text-slate-600 mb-6">Registrazione rapida. Potrai completare il profilo dopo l’accesso.</p>

    <%# Errori validazione Lead %>
    <% if @lead&.errors&.any? %>
      <div class="mb-6 rounded-xl border border-red-300 bg-red-50 p-4 text-red-800 shadow-sm">
        <p class="font-semibold mb-2">⚠️ Ci sono errori nel form:</p>
        <ul class="list-disc pl-6 space-y-1 text-sm">
          <% @lead.errors.full_messages.each do |m| %>
            <li><%= m %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with scope: :lead, url: registration_path, method: :post, class: "space-y-6" do |f| %>
      <div>
        <%= f.label :email, "Email", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.email_field :email,
              class: "w-full rounded-lg border border-slate-300 focus:border-blue-500 focus:ring focus:ring-blue-200/50 px-3 py-2 shadow-sm transition",
              required: true %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.password_field :password,
              class: "w-full rounded-lg border border-slate-300 focus:border-blue-500 focus:ring focus:ring-blue-200/50 px-3 py-2 shadow-sm transition",
              required: true, autocomplete: "new-password" %>
      </div>

      <div>
        <%= f.label :referral_code, "Codice referente (opzionale)", class: "block text-sm font-medium text-slate-700 mb-1" %>
        <%= f.text_field :referral_code,
              class: "w-full rounded-lg border border-slate-300 focus:border-blue-500 focus:ring focus:ring-blue-200/50 px-3 py-2 shadow-sm transition" %>
      </div>

      <div class="pt-2">
        <%= f.submit "Registrami",
              class: "w-full sm:w-auto inline-flex justify-center items-center gap-2 px-6 py-2.5
                       rounded-lg bg-blue-600 text-white font-semibold shadow-md
                       hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-400
                       transition" %>
      </div>
    <% end %>
  </div>
</div>
