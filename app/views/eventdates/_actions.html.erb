<div class="flex flex-wrap justify-end gap-2 text-xs font-medium">
  <%= link_to "Mostra",
      eventdate,
      class: "inline-flex items-center rounded-md border border-slate-200 px-2.5 py-1 text-slate-600 hover:text-slate-900 hover:border-slate-300" %>

  <%= link_to "Modifica",
      edit_eventdate_path(eventdate),
      class: "inline-flex items-center rounded-md border border-slate-200 px-2.5 py-1 text-slate-600 hover:text-slate-900 hover:border-slate-300" %>

  <%= button_to "Elimina",
      eventdate,
      method: :delete,
      class: "inline-flex items-center rounded-md border border-red-200 px-2.5 py-1 text-red-600 hover:bg-red-50",
      data: { turbo_confirm: "Are you sure?" },
      form: { class: "inline-block" } %>
</div>
