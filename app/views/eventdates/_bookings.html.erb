<% bookings = eventdate.bookings.includes(:contact, :commitment).order(created_at: :desc) %>

<section class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
  <div class="flex flex-col gap-2 md:flex-row md:items-center md:justify-between">
    <div>
      <h2 class="text-xl font-semibold text-slate-900">Partecipanti & booking</h2>
      <p class="text-sm text-slate-500">Contatti invitati o confermati per questo evento.</p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to "âž• Nuovo booking",
          new_booking_path(eventdate_id: eventdate.id),
          class: "inline-flex items-center rounded-lg bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-emerald-500" %>

      <%= link_to "Vedi tutti",
          bookings_path(eventdate_id: eventdate.id),
          class: "inline-flex items-center rounded-lg border border-slate-200 bg-white px-4 py-2 text-sm font-semibold text-slate-700 shadow-sm hover:bg-slate-50" %>
    </div>
  </div>

  <% if bookings.any? %>
    <div class="mt-6 space-y-4">
      <% bookings.each do |booking| %>
        <div class="rounded-xl border border-slate-200 bg-slate-50 px-4 py-3 shadow-sm">
          <div class="flex flex-col gap-2 md:flex-row md:items-start md:justify-between">
            <div>
              <p class="text-base font-semibold text-slate-900">
                <%= booking.mycontact&.full_name.presence || "Contatto ##{booking.mycontact_id}" %>
              </p>
              <% if booking.mycontact&.email.present? %>
                <p class="text-sm text-slate-600"><%= booking.datacontact.email %></p>
              <% end %>
              <% if booking.mycontact&.phone.present? %>
                <p class="text-sm text-slate-600">ðŸ“ž <%= booking.datacontact.phone %></p>
              <% end %>
            </div>

            <div class="flex flex-wrap gap-2 text-xs font-semibold">
              <span class="inline-flex items-center rounded-full bg-white px-2.5 py-0.5 text-slate-700">
                Stato: <%= booking.status.humanize %>
              </span>
              <span class="inline-flex items-center rounded-full bg-white px-2.5 py-0.5 text-slate-700">
                Ruolo: <%= booking.participant_role.humanize %>
              </span>
              <span class="inline-flex items-center rounded-full bg-white px-2.5 py-0.5 text-slate-700">
                ModalitÃ : <%= booking.mode.humanize %>
              </span>
            </div>
          </div>

          <% if booking.commitment.present? %>
            <p class="mt-3 text-sm text-slate-600">
              ðŸ”— Relativo a: <%= link_to(booking.commitment.role_name.presence || "Commitment ##{booking.commitment_id}",
                  edit_commitment_path(booking.commitment), class: "text-blue-600 hover:underline") %>
            </p>
          <% end %>

          <% if booking.notes.present? %>
            <p class="mt-2 text-sm text-slate-600"><%= booking.notes %></p>
          <% end %>

          <div class="mt-4 flex flex-wrap gap-2">
            <%= link_to "Dettagli booking",
                booking,
                class: "inline-flex items-center rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-xs font-semibold text-slate-700 hover:bg-slate-100" %>

            <%= link_to "Modifica",
                edit_booking_path(booking),
                class: "inline-flex items-center rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-xs font-semibold text-slate-700 hover:bg-slate-100" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="mt-6 text-sm text-slate-500">Non ci sono ancora booking per questo evento. Invita i contatti per popolare la lista.</p>
  <% end %>
</section>
