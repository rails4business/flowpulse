<% content_for :title, "Eventdates" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <!-- Header -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
    <div>
      <h1 class="font-bold text-4xl"> ğŸ—“ï¸ Agenda</h1>
      <p class="text-sm text-slate-500 mt-1">
        I tuoi eventi, filtrati per giorno, tipo di data e taxbranch.
      </p>
      <% if @selected_taxbranch %>
        <p class="mt-2 inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700">
          Filtrato per
          <span class="ml-1 font-semibold text-slate-900"><%= @selected_taxbranch.display_label %></span>
        </p>
      <% end %>
    </div>

    <div class="flex items-end gap-4">
      <!-- Filtro giorno / agenda -->
      <%= form_with url: eventdates_path, method: :get, local: true, class: "flex flex-wrap gap-3 items-end" do |f| %>
        <div>
          <label class="block text-xs font-semibold text-slate-600 mb-1">
            ğŸ“† Giorno agenda
          </label>
          <%= f.date_field :on,
                value: (@date&.to_date || nil),
                class: "block w-full rounded-md border border-slate-300 px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          <%= hidden_field_tag :tab, @tab %>
        </div>

        <div class="flex flex-col">
          <label class="block text-xs font-semibold text-slate-600 mb-1">
            ğŸ·ï¸ Taxbranch
          </label>
          <%= hidden_field_tag :taxbranch_id, @selected_taxbranch&.id, id: "taxbranch-id-field" %>
          <%= text_field_tag :taxbranch_query,
                @selected_taxbranch&.display_label,
                list: "taxbranch-options",
                placeholder: "Scrivi per filtrare",
                autocomplete: "off",
                class: "block w-full rounded-md border border-slate-300 px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                id: "taxbranch-query-field" %>
          <datalist id="taxbranch-options">
            <option value="" data-id="">Tutti</option>
            <% @taxbranches.each do |tb| %>
              <option value="<%= tb.display_label %>" data-id="<%= tb.id %>"></option>
            <% end %>
          </datalist>
        </div>

        <div>
          <%= f.submit "Filtra",
                class: "rounded-md px-3.5 py-2 bg-slate-900 hover:bg-slate-800 text-white text-sm font-medium cursor-pointer" %>
        </div>
      <% end %>

      <%= link_to "New eventdate",
          new_eventdate_path,
          class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium" %>
    </div>
  </div>

  <!-- AGENDA DEL GIORNO -->
  <div class="mb-8">
   

    <% if @date && @agenda_eventdates.any? %>
      <%= render "eventdates/grouped_table", grouped_eventdates: @grouped_agenda_eventdates %>
    <% elsif @date %>
      <p class="text-sm text-slate-500 text-center py-6">
        Nessun evento in agenda per questo giorno.
      </p>
    <% else %>
    <% end %>
  </div>

  <!-- TABS: COMPLETE / START ONLY / TODO -->
  <div class="mb-4 border-b border-slate-200">
    <nav class="-mb-px flex gap-4 text-sm">
      <% tabs = {
        "all"        => "Tutti",
        "complete"   => "Date complete",
        "start_only" => "Task Make",
        "todo"       => "To Do"
      } %>

      <% tabs.each do |key, label| %>
        <% active = (@tab == key) %>
        <%= link_to label,
            eventdates_path(on: (@date&.to_s), tab: key, taxbranch_id: @selected_taxbranch&.id),
            class: [
              "px-4 py-2 border-b-2 font-medium",
              active ? "border-slate-900 text-slate-900" : "border-transparent text-slate-500 hover:text-slate-900"
            ].join(" ") %>
      <% end %>
    </nav>
  </div>

  <div id="eventdates-tab-content" class="mb-10">
    <% if @current_collection.any? %>
      <%= render "eventdates/grouped_table", grouped_eventdates: @grouped_tab_eventdates %>
    <% else %>
      <p class="text-sm text-slate-500">
        <% if @tab == "all" %>
          Nessun evento disponibile.
        <% elsif @tab == "complete" %>
          Nessun evento con data completa (inizio + fine).
        <% elsif @tab == "start_only" %>
          Nessun evento con solo data di inizio.
        <% else %>
          Nessun evento da pianificare (senza data).
        <% end %>
      </p>
    <% end %>
  </div>
</div>

<%= javascript_tag do %>
  const setupTaxbranchAutocomplete = () => {
    const input = document.getElementById("taxbranch-query-field");
    const hidden = document.getElementById("taxbranch-id-field");
    if (!input || !hidden) return;

    const options = Array.from(document.querySelectorAll("#taxbranch-options option"));

    const syncHidden = () => {
      const value = input.value.trim();
      const match = options.find((option) => option.value === value);
      hidden.value = match && match.dataset.id ? match.dataset.id : "";
    };

    input.addEventListener("change", syncHidden);
    input.addEventListener("input", () => {
      if (!input.value) hidden.value = "";
    });
  };

  document.addEventListener("turbo:load", setupTaxbranchAutocomplete);
  document.addEventListener("DOMContentLoaded", setupTaxbranchAutocomplete);
<% end %>
