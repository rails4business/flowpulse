<% content_for :title, "Eventdates" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice">
      <%= notice %>
    </p>
  <% end %>

  <!-- Header -->
  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-6">
    <div>
      <h1 class="font-bold text-4xl">Eventdates</h1>
      <p class="text-sm text-slate-500 mt-1">
        I tuoi eventi, filtrati per giorno e tipo di data.
      </p>
    </div>

    <div class="flex items-end gap-4">
      <!-- Filtro giorno / agenda -->
      <%= form_with url: eventdates_path, method: :get, local: true, class: "flex items-end gap-2" do |f| %>
        <div>
          <label class="block text-xs font-semibold text-slate-600 mb-1">
            ğŸ“† Giorno agenda
          </label>
          <%= f.date_field :on,
                value: (@date&.to_date || nil),
                class: "block w-full rounded-md border border-slate-300 px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
          <%= hidden_field_tag :tab, @tab %>
        </div>
        <div>
          <%= f.submit "Filtra",
                class: "rounded-md px-3.5 py-2 bg-slate-900 hover:bg-slate-800 text-white text-sm font-medium cursor-pointer" %>
        </div>
      <% end %>

      <%= link_to "New eventdate",
          new_eventdate_path,
          class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white text-sm font-medium" %>
    </div>
  </div>

  <!-- AGENDA DEL GIORNO -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-3">
      <h2 class="text-lg font-semibold text-slate-900">
        ğŸ—“ï¸ Agenda
        <% if @date %>
          <span class="text-slate-500 text-sm">
            per <%= l(@date, format: :long) rescue @date %>
          </span>
        <% else %>
          <span class="text-slate-400 text-sm">(seleziona un giorno e filtra)</span>
        <% end %>
      </h2>
    </div>

    <% if @date && @agenda_eventdates.any? %>
      <div class="overflow-x-auto rounded-lg border border-slate-200 bg-white">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-wide text-slate-500">
            <tr>
              <th scope="col" class="px-4 py-3 text-left">Periodo</th>
              <th scope="col" class="px-4 py-3 text-left">Stato</th>
              <th scope="col" class="px-4 py-3 text-right">Azioni</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 bg-white text-slate-700">
            <%= render partial: "eventdates/list_row",
                collection: @agenda_eventdates,
                as: :eventdate %>
          </tbody>
        </table>
      </div>
    <% elsif @date %>
      <p class="text-sm text-slate-500 text-center py-6">
        Nessun evento in agenda per questo giorno.
      </p>
    <% else %>
      <p class="text-sm text-slate-400">
        Imposta una data e premi â€œFiltraâ€ per vedere l'agenda giornaliera.
      </p>
    <% end %>
  </div>

  <!-- TABS: COMPLETE / START ONLY / TODO -->
  <div class="mb-4 border-b border-slate-200">
    <nav class="-mb-px flex gap-4 text-sm">
      <% tabs = {
        "complete"   => "Date complete",
        "start_only" => "Task Make",
        "todo"       => "To Do"
      } %>

      <% tabs.each do |key, label| %>
        <% active = (@tab == key) %>
        <%= link_to label,
            eventdates_path(on: (@date&.to_s), tab: key),
            class: [
              "px-4 py-2 border-b-2 font-medium",
              active ? "border-slate-900 text-slate-900" : "border-transparent text-slate-500 hover:text-slate-900"
            ].join(" ") %>
      <% end %>
    </nav>
  </div>

  <% current_collection =
      case @tab
      when "complete"   then @complete_eventdates
      when "start_only" then @start_only_eventdates
      else                    @todo_eventdates
      end %>

  <div id="eventdates-tab-content" class="mb-10">
    <% if current_collection.any? %>
      <div class="overflow-x-auto rounded-lg border border-slate-200 bg-white">
        <table class="min-w-full divide-y divide-slate-200 text-sm">
          <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-wide text-slate-500">
            <tr>
              <th scope="col" class="px-4 py-3 text-left">Periodo</th>
              <th scope="col" class="px-4 py-3 text-left">Stato</th>
              <th scope="col" class="px-4 py-3 text-right">Azioni</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 bg-white text-slate-700">
            <%= render partial: "eventdates/list_row",
                collection: current_collection,
                as: :eventdate %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-slate-500">
        <% if @tab == "complete" %>
          Nessun evento con data completa (inizio + fine).
        <% elsif @tab == "start_only" %>
          Nessun evento con solo data di inizio.
        <% else %>
          Nessun evento da pianificare (senza data).
        <% end %>
      </p>
    <% end %>
  </div>
</div>
