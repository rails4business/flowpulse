<%# app/views/posts/_body.html.erb %>
<% wrapper_class = "prose prose-slate body-prose leading-[1.35] text-left dark:bg-slate-950 dark:prose-invert prose-p:my-3 prose-p:leading-[1.35] prose-ul:list-disc prose-ol:list-decimal prose-ul:pl-6 prose-ol:pl-6 prose-ul:marker:text-slate-500 prose-ol:marker:text-slate-500 prose-blockquote:border-slate-200 prose-blockquote:bg-slate-50/70 prose-blockquote:text-slate-700 dark:prose-blockquote:border-slate-700 dark:prose-blockquote:bg-slate-900/60 dark:prose-blockquote:text-slate-100" %>
<% wrapper_class = "#{wrapper_class} #{local_assigns[:wrapper_class]}" if local_assigns[:wrapper_class].present? %>
<div class="<%= wrapper_class %>">
    <% if @post.content_md.present? %>
      <%= markdown(@post.content_md) %>
    <% elsif @post.respond_to?(:content) && @post.content.present? %>
      <%= @post.content %>
   
    <% end %>
  </div>
