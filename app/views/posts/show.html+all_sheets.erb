<%# app/views/posts/show.html+all_sheets.erb %>
<% content_for :title, @post.title.presence || "Schede del percorso" %>

<%= render "shared/nav_partial_post" %>

<% branch = @post.taxbranch %>
<% sheets = branch&.children&.ordered || Taxbranch.none %>

<div class="min-h-screen bg-slate-50 text-slate-900 antialiased">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 py-10 space-y-6">
    <section class="rounded-2xl bg-white border border-slate-200 p-6 shadow-sm space-y-4">
      <p class="text-xs uppercase tracking-wide text-slate-500">Raccolta schede</p>
      <h1 class="text-3xl font-bold text-slate-900">
        <%= @post.title.presence || branch&.display_label || "All sheets" %>
      </h1>
      <% if @post.description.present? %>
        <p class="text-sm text-slate-600"><%= @post.description %></p>
      <% end %>
      <div class="prose prose-slate max-w-none">
        <%= markdown(@post.content_md.presence || @post.description.to_s) %>
      </div>
      <div class="flex items-center gap-6 pt-4 border-t border-slate-100 text-sm text-slate-500">
        <div>
          <span class="text-xs uppercase tracking-wide text-slate-400">Totale schede</span>
          <p class="text-2xl font-semibold text-slate-900"><%= sheets.size %></p>
        </div>
      </div>
    </section>

    <% if sheets.any? %>
      <% grouped = sheets.group_by { |tb| tb.slug_category.presence || "Altro" } %>
      <div class="space-y-8">
        <% grouped.each do |category, records| %>
          <section class="space-y-3">
            <div class="flex items-center gap-2">
              <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-0.5 text-xs font-semibold text-slate-600">
                <%= category.titleize %>
              </span>
              <span class="text-xs text-slate-400"><%= pluralize(records.size, "scheda") %></span>
            </div>
            <div class="grid gap-4 md:grid-cols-2">
              <% records.each do |sheet_branch| %>
                <% target = sheet_branch.link_child || sheet_branch %>
                <% target_post = target.post %>
                <% url = target_post ? post_entry_link(target_post, taxbranch: target) : nil %>
                <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm space-y-3">
                  <div class="flex items-center gap-2">
                    <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-slate-900 text-white text-sm font-semibold">
                      <%= sheet_branch.position || sheet_branch.id %>
                    </span>
                    <div>
                      <h3 class="text-lg font-semibold text-slate-900">
                        <%= sheet_branch.slug_label.presence || sheet_branch.display_label %>
                      </h3>
                      <p class="text-xs text-slate-500">
                        <%= target.slug_category.presence || "sheet" %> · ID <%= target.id %>
                      </p>
                    </div>
                  </div>
                  <% if target_post&.description.present? %>
                    <p class="text-sm text-slate-600 line-clamp-3"><%= target_post.description %></p>
                  <% end %>
                  <div class="flex items-center gap-3">
                    <% if url %>
                      <%= link_to "Apri scheda",
                                  url,
                                  class: "inline-flex items-center justify-center rounded-full bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
                    <% else %>
                      <span class="text-xs text-slate-400">Collega a un post per attivarla.</span>
                    <% end %>
                    <% if sheet_branch.link_child.present? %>
                      <span class="text-xs text-slate-500">Link → <%= sheet_branch.link_child.slug_label || sheet_branch.link_child.slug %></span>
                    <% end %>
                  </div>
                </article>
              <% end %>
            </div>
          </section>
        <% end %>
      </div>
    <% else %>
      <div class="rounded-xl border border-dashed border-slate-300 p-6 text-center text-slate-500">
        Nessuna scheda è stata collegata a questa raccolta.
      </div>
    <% end %>
  </div>
</div>
