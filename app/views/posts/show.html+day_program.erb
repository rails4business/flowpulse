<%# app/views/posts/show.html+day_program.erb %>
<% content_for :title, @post.title.presence || "Programma giornaliero" %>

<%= render "shared/nav_partial_post" %>

<% day_branch = @post.taxbranch %>
<% sheet_links = day_branch&.children&.ordered || Taxbranch.none %>
<% lead = Current.user&.lead || (defined?(current_lead) ? current_lead : nil) %>

<div class="min-h-screen bg-slate-50 text-slate-900 antialiased">
  <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-10 space-y-6">
    <section class="rounded-2xl bg-white border border-slate-200 p-6 shadow-sm space-y-4">
      <p class="text-xs uppercase tracking-wide text-slate-500">Giorno</p>
      <h1 class="text-3xl font-bold text-slate-900">
        <%= @post.title.presence || day_branch&.display_label || "Day program" %>
      </h1>
      <% if day_branch&.description.present? %>
        <p class="text-sm text-slate-600"><%= day_branch.description %></p>
      <% end %>
      <div class="prose prose-slate max-w-none">
        <%= markdown(@post.content_md.presence || @post.description.to_s) %>
      </div>
      <div class="flex items-center gap-4 pt-4 border-t border-slate-100 text-sm text-slate-500">
        <div>
          <span class="text-xs uppercase tracking-wide text-slate-400">Schede abbinate</span>
          <p class="text-xl font-semibold text-slate-900"><%= sheet_links.size %></p>
        </div>
        <% if day_branch&.eventdates&.exists? %>
          <div>
            <span class="text-xs uppercase tracking-wide text-slate-400">Eventi</span>
            <p class="text-xl font-semibold text-slate-900"><%= day_branch.eventdates.count %></p>
          </div>
        <% end %>
      </div>
    </section>

    <% done_scope = lead ? Eventdate.where(lead: lead, taxbranch: day_branch) : Eventdate.none %>
    <% last_done_at = done_scope.order(created_at: :desc).limit(1).pick(:created_at) %>
    <% already_done = last_done_at.present? %>

    <section class="rounded-2xl bg-white border border-slate-200 p-6 shadow-sm space-y-4">
      <div class="flex flex-wrap items-center justify-between gap-3">
        <div>
          <p class="text-xs uppercase tracking-wide text-slate-500">Stato</p>
          <% if already_done %>
            <p class="text-sm text-emerald-700">
              Completato il <%= l(last_done_at, format: :short) %> (<%= done_scope.count %> volte)
            </p>
          <% else %>
            <p class="text-sm text-slate-500">Non ancora segnato come completo.</p>
          <% end %>
        </div>
        <% if Current.user.present? %>
          <%= button_to(
                already_done ? "âœ“ Giorno completato" : "Segna giorno completato",
                mark_done_post_path(@post, taxbranch_id: day_branch.id),
                method: :post,
                class: "inline-flex items-center justify-center rounded-full px-4 py-2 text-sm font-semibold " +
                       (already_done ? "bg-emerald-100 text-emerald-700 border border-emerald-200"
                                     : "border border-slate-300 text-slate-600 hover:bg-slate-50"),
                form: { data: { turbo: true } }
              ) %>
        <% else %>
          <%= link_to "Accedi per segnare",
                      new_registration_path,
                      class: "text-xs text-blue-600 hover:underline" %>
        <% end %>
      </div>
    </section>

    <section class="space-y-3">
      <div>
        <p class="text-xs uppercase tracking-wide text-slate-500">Schede di oggi</p>
        <h2 class="text-2xl font-semibold text-slate-900">Materiali collegati</h2>
      </div>

      <% if sheet_links.any? %>
        <div class="space-y-4">
          <% sheet_links.each do |link_node| %>
            <% target      = link_node.link_child || link_node %>
            <% target_post = target.post %>
            <% url         = target_post ? post_entry_link(target_post, taxbranch: target) : nil %>

            <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm space-y-3">
              <div class="flex items-center gap-3">
                <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-0.5 text-xs font-semibold text-slate-600">
                  <%= link_node.slug_category.presence || "sheet" %>
                </span>
                <h3 class="text-lg font-semibold text-slate-900">
                  <%= link_node.slug_label.presence || link_node.display_label %>
                </h3>
              </div>
              <% if target_post&.description.present? %>
                <p class="text-sm text-slate-600"><%= target_post.description %></p>
              <% end %>
              <% if url %>
                <div class="flex flex-wrap items-center gap-3">
                  <%= link_to "Apri scheda",
                              url,
                              class: "inline-flex items-center justify-center rounded-full bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
                  <% if target_post&.url_media_content.present? %>
                    <span class="text-xs text-slate-500">Media: <%= target_post.url_media_content %></span>
                  <% end %>
                </div>
              <% else %>
                <span class="text-xs text-slate-400">Collega un post per attivare questa scheda.</span>
              <% end %>
            </article>
          <% end %>
        </div>
      <% else %>
        <div class="rounded-xl border border-dashed border-slate-300 p-6 text-center text-slate-500">
          Nessuna scheda collegata a questo giorno.
        </div>
      <% end %>
    </section>
  </div>
</div>
