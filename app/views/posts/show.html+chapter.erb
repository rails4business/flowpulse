<%# Singolo capitolo: layout narrativa */>
<% content_for :title, @post.title.presence || "Chapter" %>

<div class="min-h-screen bg-slate-50 text-slate-900">
  <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-12 space-y-8">
    <header class="space-y-2">
      <p class="text-xs uppercase tracking-wide text-slate-500">Capitolo</p>
      <h1 class="text-3xl font-bold"><%= @post.title %></h1>
      <% if @post.description.present? %>
        <p class="text-sm text-slate-600"><%= @post.description %></p>
      <% end %>
    </header>

    <article class="prose prose-slate max-w-none bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
      <%= markdown(@post.content_md.presence || @post.description.to_s) %>
    </article>
  </div>
</div>
