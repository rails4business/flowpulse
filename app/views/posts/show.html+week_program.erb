<%# app/views/posts/show.html+week_program.erb %>
<% content_for :title, @post.title.presence || "Programma settimanale" %>

<%= render "shared/nav_partial_post" %>

<% week_branch = @post.taxbranch %>
<% day_nodes   = week_branch&.children&.ordered || Taxbranch.none %>
<% lead        = Current.user&.lead || (defined?(current_lead) ? current_lead : nil) %>

<div class="min-h-screen bg-gradient-to-b from-slate-50 to-white text-slate-900 antialiased">
  <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-10 space-y-8">
    <!-- Header -->
    <section class="rounded-2xl bg-white shadow-sm border border-slate-200 p-6 space-y-4">
      <p class="text-xs uppercase tracking-wide text-slate-500">Settimana</p>
      <h1 class="text-3xl font-bold text-slate-900">
        <%= @post.title.presence || week_branch&.display_label || "Week program" %>
      </h1>
      <% if @post.description.present? %>
        <p class="text-sm text-slate-600"><%= @post.description %></p>
      <% end %>
      <div class="prose prose-slate max-w-none">
        <%= markdown(@post.content_md.presence || @post.description.to_s) %>
      </div>
      <% if day_nodes.any? %>
        <div class="flex items-center gap-4 pt-4 border-t border-slate-100 text-sm text-slate-500">
          <div>
            <span class="text-xs uppercase tracking-wide text-slate-400">Giorni</span>
            <p class="text-xl font-semibold text-slate-900"><%= day_nodes.size %></p>
          </div>
          <div>
            <span class="text-xs uppercase tracking-wide text-slate-400">Schede collegate</span>
            <% sheet_count = day_nodes.count { |day| (day.link_child || day).slug_category.to_s.include?("sheet") } %>
            <p class="text-xl font-semibold text-slate-900"><%= sheet_count %></p>
          </div>
          <% if week_branch&.eventdates&.exists? %>
            <div>
              <span class="text-xs uppercase tracking-wide text-slate-400">Eventi</span>
              <p class="text-xl font-semibold text-slate-900"><%= week_branch.eventdates.count %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </section>

    <!-- Days timeline -->
    <section class="space-y-4">
      <div>
        <p class="text-xs uppercase tracking-wide text-slate-500">Timeline</p>
        <h2 class="text-2xl font-semibold text-slate-900">Programma giornaliero</h2>
      </div>

      <% if day_nodes.any? %>
        <ol class="space-y-4">
          <% day_nodes.each_with_index do |day, idx| %>
            <% target       = day.link_child || day %>
            <% target_post  = target.post %>
            <% done_scope   = lead ? Eventdate.where(lead: lead, taxbranch: day) : Eventdate.none %>
            <% last_done_at = done_scope.order(created_at: :desc).limit(1).pick(:created_at) %>
            <% already_done = last_done_at.present? %>
            <% sheet_url    = target_post ? post_entry_link(target_post, taxbranch: target) : nil %>

            <li class="relative rounded-2xl border border-slate-200 bg-white shadow-sm p-5 space-y-3">
              <div class="flex items-center justify-between gap-3 flex-wrap">
                <div class="flex items-center gap-3">
                  <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-slate-900 text-white font-semibold">
                    <%= idx + 1 %>
                  </span>
                  <div>
                    <p class="text-xs uppercase tracking-wide text-slate-400">
                      <%= day.slug_category.presence || "Day" %>
                    </p>
                    <h3 class="text-xl font-semibold text-slate-900">
                      <%= day.slug_label.presence || day.display_label %>
                    </h3>
                    <% if day.post&.description.present? %>
                      <p class="text-sm text-slate-600"><%= day.post.description %></p>
                    <% end %>
                  </div>
                </div>

                <div class="flex items-center gap-2">
                  <% if sheet_url %>
                    <%= link_to "Apri scheda",
                                sheet_url,
                                class: "inline-flex items-center justify-center rounded-full bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-800" %>
                  <% else %>
                    <span class="text-xs text-slate-400">Nessuna scheda collegata</span>
                  <% end %>

                  <% if Current.user.present? %>
                    <%= button_to(
                          already_done ? "âœ“ Fatto" : "Segna fatto",
                          mark_done_post_path(@post, taxbranch_id: day.id),
                          method: :post,
                          class: "inline-flex items-center justify-center rounded-full px-4 py-2 text-sm font-semibold " +
                                 (already_done ? "bg-emerald-100 text-emerald-700 border border-emerald-200"
                                               : "border border-slate-300 text-slate-600 hover:bg-slate-50"),
                          form: { data: { turbo: true } }
                        ) %>
                  <% else %>
                    <%= link_to "Registrati per segnare",
                                new_registration_path,
                                class: "text-xs text-blue-600 hover:underline" %>
                  <% end %>
                </div>
              </div>

              <% if already_done %>
                <p class="text-xs text-emerald-700">
                  Completato il <%= l(last_done_at, format: :short) %> (<%= done_scope.count %> volte)
                </p>
              <% end %>

              <% if target_post&.description.present? %>
                <div class="rounded-xl bg-slate-50 p-4 text-sm text-slate-700">
                  <%= target_post.description %>
                </div>
              <% end %>

              <% if target_post&.journey.present? %>
                <p class="text-xs text-slate-500">
                  Journey collegato:
                  <%= target_post.journey.title.presence || "Journey ##{target_post.journey.id}" %>
                </p>
              <% end %>
            </li>
          <% end %>
        </ol>
      <% else %>
        <div class="rounded-xl border border-dashed border-slate-300 p-6 text-center text-slate-500">
          Non ci sono ancora giorni programmati per questa settimana.
        </div>
      <% end %>
    </section>

    <!-- Extra resources -->
    <% if week_branch&.children&.where.not(id: day_nodes.pluck(:id)).exists? %>
      <% extras = week_branch.children.where.not(id: day_nodes.pluck(:id)) %>
      <section class="space-y-3">
        <h2 class="text-xl font-semibold text-slate-900">Altre risorse della settimana</h2>
        <div class="grid gap-4 md:grid-cols-2">
          <% extras.each do |node| %>
            <% url = node.post ? post_entry_link(node.post, taxbranch: node) : nil %>
            <article class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm space-y-2">
              <p class="text-xs uppercase tracking-wide text-slate-400"><%= node.slug_category.presence || "Resource" %></p>
              <h3 class="text-lg font-semibold text-slate-900"><%= node.slug_label.presence || node.display_label %></h3>
              <% if node.post&.description.present? %>
                <p class="text-sm text-slate-600 line-clamp-3"><%= node.post.description %></p>
              <% end %>
              <% if url %>
                <%= link_to "Apri risorsa",
                            url,
                            class: "inline-flex items-center gap-1 text-sm font-medium text-slate-900 hover:underline" %>
              <% else %>
                <span class="text-xs text-slate-400">Collega un post per pubblicarla.</span>
              <% end %>
            </article>
          <% end %>
        </div>
      </section>
    <% end %>
  </div>
</div>
