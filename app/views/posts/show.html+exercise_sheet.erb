<%# app/views/posts/show.html+exercise_sheet.erb - versione NO JS %>
<% content_for :title, @post.title.presence || "Scheda esercizi" %>

<%= render 'shared/nav_partial_post' %>
<style>
  .tw-details summary::-webkit-details-marker { display: none; } /* nasconde il marker nativo */
  .tw-details[open] .chev { transform: rotate(90deg); }          /* ruota la freccia quando è aperto */
</style>
<div class="min-h-screen bg-slate-50 text-slate-900 antialiased dark:bg-slate-950 dark:text-slate-100">
  <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-10">

    <!-- Header -->
    <header class="mb-10 flex items-start gap-4">
      <% if @post.thumb_url.present? %>
        <img src="<%= @post.thumb_url %>"
             alt="Cover <%= @post.title %>"
             class="w-16 h-16 rounded-xl object-cover shadow-sm ring-1 ring-slate-200/60 hidden md:flex">
      <% end %>
      <div class="flex-1">
        <h1 class="text-2xl font-bold leading-tight">
          <%= @post.title.presence || "Scheda esercizi" %>
        </h1>
        <% if @post.description.present? %>
          <p class="mt-2 text-slate-600 dark:text-slate-300"><%= @post.description %></p>
        <% end %>
      </div>
    </header>

    <%# Lead corrente (fallback a current_lead se esiste nel tuo progetto) %>
    <% lead = Current.user&.lead || (defined?(current_lead) ? current_lead : nil) %>

    <% children = @post.taxbranch&.children || [] %>

    <!-- Barra progresso (calcolo server-side) -->
    <% total = 0; done = 0 %>
    <% children.each do |tb| %>
      <% cp = tb.post %>
      <% next unless cp&.status == "published" %>
      <% total += 1 %>
      <% if lead && Eventdate.where(lead: lead, taxbranch: tb).exists? %>
        <% done += 1 %>
      <% end %>
    <% end %>

    <div class="mb-4 flex items-center justify-between">
      <h2 class="text-xl font-semibold">Lista esercizi</h2>
      <div class="text-sm text-slate-600"><%= done %>/<%= total %> completati</div>
    </div>

    <% if total.zero? %>
      <div class="rounded-xl border border-slate-200 p-4 text-slate-600">
        Nessun esercizio collegato. Aggiungi post figli al taxbranch di questa scheda.
      </div>
    <% end %>

    <div class="space-y-4">
      <% children.each do |taxbranch| %>
        <% child_post = taxbranch.post %>
        <% next unless child_post&.status == "published" %>

        <% exercise_url = (post_path(child_post) rescue nil) %>
<% has_media = child_post.respond_to?(:url_media_content) && child_post.url_media_content.present? %>
<%
  scope       = lead ? Eventdate.where(lead: lead, taxbranch: taxbranch) : Eventdate.none
  done_at     = scope.order(created_at: :desc).limit(1).pick(:created_at)
  already_done = done_at.present?
%>

<% if flash[:notice].present? || flash[:alert].present? %>
  <div class="mt-6 space-y-3">
    <% if flash[:notice].present? %>
      <div id="alert-success" class="flex p-4 mb-4 text-sm text-green-800 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800" role="alert">
        <svg class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18.707 3.293a1 1 0 00-1.414 0L9 11.586 3.707 6.293a1 1 0 00-1.414 1.414l6.293 6.293a1 1 0 001.414 0l9.293-9.293a1 1 0 000-1.414z" clip-rule="evenodd"></path></svg>
        <span class="sr-only">Success:</span>
        <div>
          <%= flash[:notice] %>
        </div>
        <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-success" aria-label="Close">
          <span class="sr-only">Close</span>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </button>
      </div>
    <% end %>
    <% if flash[:alert].present? %>
      <div id="alert-error" class="flex p-4 mb-4 text-sm text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert">
        <svg class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M18.707 3.293a1 1 0 00-1.414 0L9 11.586 3.707 6.293a1 1 0 00-1.414 1.414l6.293 6.293a1 1 0 001.414 0l9.293-9.293a1 1 0 000-1.414z" clip-rule="evenodd"></path></svg>
        <span class="sr-only">Error:</span>
        <div>
          <%= flash[:alert] %>
        </div>
        <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-error" aria-label="Close">
          <span class="sr-only">Close</span>
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </button>
      </div>
    <% end %>
  </div>
<% end %>

<script>
  // Auto-hide Flowbite alerts dopo 3.5 secondi
  document.addEventListener('DOMContentLoaded', function() {
    const alertSuccess = document.getElementById('alert-success');
    const alertError = document.getElementById('alert-error');
    
    if (alertSuccess) {
      setTimeout(() => {
        alertSuccess.remove();
      }, 3500);
    }
    
    if (alertError) {
      setTimeout(() => {
        alertError.remove();
      }, 3500);
    }
  });
</script>

<style>
  @keyframes slideOut {
    from {
      opacity: 1;
      transform: translateY(0);
    }
    to {
      opacity: 0;
      transform: translateY(-20px);
    }
  }
</style>
      <article class="border rounded-xl p-0 shadow-sm bg-white border-slate-300 dark:bg-slate-900">
  <details class="tw-details rounded-xl overflow-hidden">
    <!-- Riga in alto: freccia + titolo a sinistra, bottone a destra -->
    <summary class="flex items-center justify-between gap-3 cursor-pointer list-none select-none p-4">
      <div class="flex items-start gap-2 min-w-0">
        <!-- Freccia -->
        <svg
          class="chev w-4 h-4 mt-1 shrink-0 transition-transform duration-200 text-slate-400"
          xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>

        <!-- Titolo + stato -->
        <div class="min-w-0">
          <h3 class="text-lg font-semibold text-slate-800 dark:text-slate-100 truncate">
            <span class="inline-block w-1.5 h-5 align-middle rounded <%= already_done ? 'bg-green-400' : 'bg-slate-300' %>"></span>
            <span class="ml-2 align-middle"><%= child_post.title.presence || "(Senza titolo)" %></span>
          </h3>

          <% if already_done %>
            <p class="mt-1 text-xs text-slate-500">
              Completato il <%= l(done_at, format: :short) %> (x<%= scope.count %>)
            </p>
          <% end %>
        </div>
      </div>

      <!-- Azione a destra: ✓/○ oppure Registrati -->
      <div class="shrink-0">
        <% if Current.user.present? %>
          <%= button_to(
            already_done ? "✓" : "○",
            mark_done_post_path(child_post, taxbranch_id: taxbranch.id),
            method: :post,
            class: "w-9 h-9 flex items-center justify-center rounded-full border-2 text-lg font-bold transition-all " +
                   (already_done ?
                     "border-green-600 text-green-600 bg-white hover:bg-green-50" :
                     "border-slate-300 text-slate-400 hover:border-slate-400 hover:text-slate-500"),
            form: { data: { turbo: true } }
          ) %>
        <% else %>
          <%= link_to "Registrati per compilare", new_registration_path,
                class: "text-sm font-medium text-blue-600 hover:underline" %>
        <% end %>
      </div>
    </summary>

    <!-- Contenuto espanso -->
    <div class="p-4 border-t border-slate-200 dark:border-slate-800 space-y-3">
      <% if child_post.description.present? %>
        <p class="text-slate-600 dark:text-slate-300"><%= child_post.description %></p>
      <% end %>

      <% if has_media %>
        <div class="overflow-hidden rounded-lg ring-1 ring-slate-200 dark:ring-slate-800">
          <% if (embed = media_embed(child_post.url_media_content)).present? %>
            <%= embed %>
          <% elsif child_post.cover_url.present? %>
            <img src="<%= child_post.cover_url %>" alt="<%= child_post.title %>" class="w-full rounded-lg shadow-sm object-cover">
          <% end %>
        </div>
      <% elsif child_post.cover_url.present? %>
        <img src="<%= child_post.cover_url %>" alt="<%= child_post.title %>" class="w-full rounded-lg shadow-sm object-cover">
      <% end %>

      <% if exercise_url.present? %>
        <%= link_to "Apri esercizio →", exercise_url,
              class: "inline-flex items-center text-sm underline hover:no-underline" %>
      <% end %>
    </div>
  </details>
</article>


      <% end %>
    </div>

   

    <!--p class="mt-8 text-xs text-slate-500">
      Lo stato “Fatto” viene registrato lato server con un <code>Eventdate</code> collegato al tuo lead (<code>Current.user.lead</code>).
    </p-->
  </div>
</div>
