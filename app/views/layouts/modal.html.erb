<%= turbo_frame_tag "modal" do %>
  <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 p-4">
    <div class="w-full max-w-xl rounded-2xl border border-slate-200 bg-slate-50 p-5 shadow-2xl">
      <div class="flex items-center justify-between gap-4 mb-4">
        <h2 class="text-lg font-semibold text-slate-900"><%= content_for?(:title) ? yield(:title) : "Dettagli" %></h2>
        <%= link_to "Chiudi",
                    request.referer || "/",
                    data: { turbo_frame: "_top" },
                    class: "text-sm font-medium text-slate-500 hover:text-slate-900" %>
      </div>
      <div class="max-h-[70vh] overflow-y-auto pr-1">
        <%= yield %>
      </div>
    </div>
  </div>
<% end %>
