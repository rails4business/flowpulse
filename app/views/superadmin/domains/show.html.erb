<% content_for :title, @domain.title.presence || @domain.host %>

<div class="space-y-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-600 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="rounded-xl border border-[#283039] bg-[#101922] p-2">
    <div class="flex flex-wrap items-center gap-2">
      <%= link_to "Overview",
                  superadmin_domain_path(@domain, tab: "overview"),
                  class: "inline-flex items-center rounded-md px-3 py-1.5 text-sm font-semibold #{(@tab == 'overview') ? 'bg-primary/15 text-primary border border-primary/40' : 'text-[#9dabb9] border border-transparent hover:text-white hover:border-[#3a4652]'}" %>
      <%= link_to "Services",
                  superadmin_domain_path(@domain, tab: "services"),
                  class: "inline-flex items-center rounded-md px-3 py-1.5 text-sm font-semibold #{(@tab == 'services') ? 'bg-primary/15 text-primary border border-primary/40' : 'text-[#9dabb9] border border-transparent hover:text-white hover:border-[#3a4652]'}" %>
    </div>
  </div>

  <% if @tab == "overview" %>
    <div class="rounded-2xl border border-[#283039] bg-[#101922] p-6 shadow-sm text-white">
      <div class="flex flex-col gap-2">
        <h1 class="text-3xl font-bold text-white"><%= @domain.title.presence || @domain.host %></h1>
        <p class="text-sm text-[#9dabb9]">Host: <%= @domain.host %></p>
        <div class="flex flex-wrap gap-2 text-xs">
          <span class="inline-flex items-center rounded-full bg-[#0f172a] px-2.5 py-0.5 font-semibold text-[#e2e8f0]">Lingua: <%= @domain.language %></span>
          <% if @domain.provider.present? %>
            <span class="inline-flex items-center rounded-full bg-[#0f172a] px-2.5 py-0.5 font-semibold text-[#e2e8f0]">Provider: <%= @domain.provider %></span>
          <% end %>
        </div>
      </div>

      <div class="mt-4 grid gap-4 md:grid-cols-2">
        <div class="rounded-xl border border-[#283039] bg-[#0f172a] p-4">
          <p class="text-xs uppercase tracking-wide text-[#9dabb9]">Taxbranch principale</p>
          <% if @domain.taxbranch.present? %>
            <p class="mt-2 text-sm font-semibold text-white">
              <%= link_to @domain.taxbranch.display_label,
                          superadmin_taxbranch_path(@domain.taxbranch),
                          class: "text-primary hover:underline" %>
            </p>
            <p class="text-xs text-[#9dabb9]">Slug: <%= @domain.taxbranch.slug %></p>
          <% else %>
            <p class="mt-2 text-sm text-[#9dabb9]">Nessun taxbranch collegato.</p>
          <% end %>
        </div>

        <div class="rounded-xl border border-[#283039] bg-[#0f172a] p-4">
          <p class="text-xs uppercase tracking-wide text-[#9dabb9]">Ruoli operativi</p>
          <% if @domain.operative_roles.present? %>
            <ul class="mt-2 text-sm text-[#e2e8f0] space-y-1">
              <% @domain.operative_roles.each do |area| %>
                <li>• <%= area %></li>
              <% end %>
            </ul>
          <% else %>
            <p class="mt-2 text-sm text-[#9dabb9]">Nessun ruolo definito.</p>
          <% end %>
        </div>
      </div>

      <div class="mt-2 flex flex-col sm:flex-row flex-wrap gap-3">
        <%= link_to "Modifica",
              edit_superadmin_domain_path(@domain),
              class: "inline-flex items-center justify-center rounded-md bg-[#0f172a] px-4 py-2 text-sm font-semibold text-white border border-[#283039] shadow-sm hover:border-primary" %>
        <%= link_to "Torna all'elenco",
              superadmin_domains_path,
              class: "inline-flex items-center justify-center rounded-md bg-[#0f172a] px-4 py-2 text-sm font-semibold text-white border border-[#283039] shadow-sm hover:border-primary" %>
        <%= button_to "Elimina",
              [:superadmin, @domain],
              method: :delete,
              form_class: "inline",
              class: "inline-flex items-center justify-center rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500",
              data: { turbo_confirm: "Eliminare questo dominio?" } %>
      </div>
    </div>

    <div class="rounded-2xl border border-[#283039] bg-[#101922] p-6 shadow-sm text-white">
      <details class="space-y-3">
        <summary class="cursor-pointer text-sm font-semibold text-white">Dettaglio tecnico</summary>
        <%= render @domain %>
      </details>
    </div>

    <div class="rounded-2xl border border-[#283039] bg-[#101922] p-6 shadow-sm text-white">
      <div class="flex items-center justify-between gap-4">
        <h2 class="text-lg font-semibold text-white">Albero taxbranch</h2>
      </div>
      <% if params[:add_services].present? %>
        <%= link_to "Annulla",
                    superadmin_domain_path(@domain, tab: "overview"),
                    class: "text-xs font-semibold text-amber-300 hover:underline" %>
      <% else %>
        <%= link_to "+ services",
                    superadmin_domain_path(@domain, tab: "overview", add_services: true),
                    class: "text-xs font-semibold text-amber-300 hover:underline" %>
      <% end %>

      <% if @domain.taxbranch.present? %>
        <% children = @domain.taxbranch.children.order(:position, :id) %>
        <ul class="mt-4 space-y-2 text-sm">
          <% children.each do |node| %>
            <li class="flex items-center gap-3">
              <div class="flex items-center gap-2">
                <span class="inline-block h-1.5 w-1.5 rounded-full bg-primary"></span>
                <%= link_to node.display_label,
                            superadmin_taxbranch_path(node),
                            class: "text-primary hover:underline" %>
                <span class="text-[#9dabb9] text-xs">(<%= node.slug %>)</span>
              </div>
              <% if node.service.present? %>
                <div class="flex items-center gap-2 text-xs text-[#9dabb9]">
                  <span class="inline-block h-1 w-1 rounded-full bg-emerald-400"></span>
                  <%= link_to node.service.name.presence || node.service.slug,
                              superadmin_service_path(node.service),
                              class: "text-emerald-300 hover:underline" %>
                </div>
              <% elsif params[:add_services].present? %>
                <div class="flex items-center gap-2 text-xs text-[#9dabb9]">
                  <span class="inline-block h-1 w-1 rounded-full bg-amber-400"></span>
                  <%= link_to "Aggiungi service",
                              new_superadmin_taxbranch_service_path(node),
                              class: "text-amber-300 hover:underline" %>
                </div>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="mt-3 text-sm text-[#9dabb9]">Nessun taxbranch collegato al dominio.</p>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-2xl border border-[#283039] bg-[#101922] p-6 shadow-sm text-white">
      <div class="flex flex-wrap items-center justify-between gap-3">
        <h2 class="text-lg font-semibold text-white">Services del dominio</h2>
        <% if @domain.taxbranch.present? %>
          <%= link_to "Nuovo service",
                      new_superadmin_taxbranch_service_path(@domain.taxbranch),
                      class: "inline-flex items-center rounded-md bg-primary px-3 py-2 text-sm font-semibold text-white hover:brightness-110" %>
        <% end %>
      </div>

      <% if @services.any? %>
        <ul class="mt-4 space-y-2">
          <% @services.each do |service| %>
            <li class="rounded-lg border border-[#283039] bg-[#0f172a] px-3 py-2">
              <div class="flex flex-wrap items-center justify-between gap-2">
                <div class="min-w-0">
                  <%= link_to(service.name.presence || service.slug,
                              superadmin_service_path(service),
                              class: "text-primary hover:underline font-semibold") %>
                  <p class="text-xs text-[#9dabb9]">
                    <% if service.taxbranch.present? %>
                      <%= service.taxbranch.display_label %> · <%= service.taxbranch.slug %>
                    <% else %>
                      Nessun taxbranch
                    <% end %>
                  </p>
                </div>
                <div class="flex items-center gap-2 text-xs">
                  <%= link_to "Modifica",
                              edit_superadmin_service_path(service),
                              class: "inline-flex items-center rounded-md border border-[#3a4652] px-2 py-1 text-[#e2e8f0] hover:border-primary" %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p class="mt-3 text-sm text-[#9dabb9]">Nessun service trovato per questo dominio.</p>
      <% end %>
    </div>
  <% end %>
</div>
