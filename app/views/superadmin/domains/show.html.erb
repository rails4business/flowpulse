<% content_for :title, @domain.title.presence || @domain.host %>

<div class="space-y-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-600 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <div class="flex flex-col gap-2">
      <h1 class="text-3xl font-bold text-slate-900"><%= @domain.title.presence || @domain.host %></h1>
      <p class="text-sm text-slate-500">Host: <%= @domain.host %></p>
      <div class="flex flex-wrap gap-2 text-xs">
        <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 font-semibold text-slate-700">Lingua: <%= @domain.language %></span>
        <% if @domain.provider.present? %>
          <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 font-semibold text-slate-700">Provider: <%= @domain.provider %></span>
        <% end %>
      </div>
    </div>

    <div class="mt-4 grid gap-4 md:grid-cols-2">
      <div class="rounded-xl border border-slate-100 bg-slate-50 p-4">
        <p class="text-xs uppercase tracking-wide text-slate-500">Taxbranch principale</p>
        <% if @domain.taxbranch.present? %>
          <p class="mt-2 text-sm font-semibold text-slate-900">
            <%= link_to @domain.taxbranch.display_label,
                        superadmin_taxbranch_path(@domain.taxbranch),
                        class: "text-blue-600 hover:underline" %>
          </p>
          <p class="text-xs text-slate-500">Slug: <%= @domain.taxbranch.slug %></p>
        <% else %>
          <p class="mt-2 text-sm text-slate-500">Nessun taxbranch collegato.</p>
        <% end %>
      </div>
      <div class="rounded-xl border border-slate-100 bg-slate-50 p-4">
        <p class="text-xs uppercase tracking-wide text-slate-500">Aree / ruoli</p>
        <% if @domain.role_areas.present? %>
          <ul class="mt-2 text-sm text-slate-700 space-y-1">
            <% @domain.role_areas.each do |area| %>
              <li>â€¢ <%= area %></li>
            <% end %>
          </ul>
        <% else %>
          <p class="mt-2 text-sm text-slate-500">Nessuna area definita.</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <p class="text-sm font-semibold text-slate-800 mb-3">Azioni rapide</p>
    <div class="flex flex-col sm:flex-row flex-wrap gap-3">
      <%= link_to "Generaimpresa",
                  generaimpresa_superadmin_domain_path(@domain),
                  class: "inline-flex items-center justify-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to "Rails4B",
                  rails4b_superadmin_domain_path(@domain),
                  class: "inline-flex items-center justify-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-slate-800 border border-slate-200 shadow-sm hover:bg-slate-50" %>
      <%= link_to "1impegno",
                  impegno_superadmin_domain_path(@domain),
                  class: "inline-flex items-center justify-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-slate-800 border border-slate-200 shadow-sm hover:bg-slate-50" %>
      <%= link_to "Modifica",
                  edit_superadmin_domain_path(@domain),
                  class: "inline-flex items-center justify-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-slate-800 border border-slate-200 shadow-sm hover:bg-slate-50" %>
      <%= link_to "Torna all'elenco",
                  superadmin_domains_path,
                  class: "inline-flex items-center justify-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-slate-800 border border-slate-200 shadow-sm hover:bg-slate-50" %>
      <%= button_to "Elimina",
                    [:superadmin, @domain],
                    method: :delete,
                    form_class: "inline",
                    class: "inline-flex items-center justify-center rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500",
                    data: { turbo_confirm: "Eliminare questo dominio?" } %>
    </div>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <details open class="space-y-3">
      <summary class="cursor-pointer text-sm font-semibold text-slate-800">Dettaglio tecnico</summary>
      <%= render @domain %>
    </details>
  </div>
</div>
