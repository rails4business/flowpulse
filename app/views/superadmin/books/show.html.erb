<% content_for :title, @book.title %>
<div class="space-y-4">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold"><%= @book.title %></h1>
    <div class="flex items-center gap-2">
      <%= link_to "Modifica", edit_superadmin_book_path(@book), class: "rounded-md border px-3 py-2 text-sm" %>
      <%= button_to "Elimina", [:superadmin, @book], method: :delete, data: { turbo_confirm: "Eliminare il libro?" }, class: "rounded-md bg-red-600 px-3 py-2 text-sm text-white" %>
    </div>
  </div>

  <div class="rounded-xl border bg-white p-4 text-sm space-y-2">
    <p><strong>Slug:</strong> <code><%= @book.slug %></code></p>
    <p><strong>Descrizione:</strong> <%= @book.description.presence || "—" %></p>
    <p><strong>Cartella MD:</strong> <code><%= @book.folder_md %></code></p>
    <p><strong>Indice:</strong> <code><%= @book.index_file %></code></p>
    <p><strong>Prezzo EUR:</strong> <%= @book.price_euro %></p>
    <p><strong>Prezzo DASH:</strong> <%= @book.price_dash %></p>
    <p><strong>Accesso:</strong> <%= @book.access_mode %></p>
    <p><strong>Domini:</strong> <%= @book.domains.map(&:host).join(", ").presence || "—" %></p>
    <p><strong>Stato:</strong> <%= @book.active? ? "Attivo" : "Disattivo" %></p>
  </div>

  <div>
    <%= link_to "Torna ai libri", superadmin_books_path, class: "text-blue-600 hover:underline" %>
  </div>
</div>
