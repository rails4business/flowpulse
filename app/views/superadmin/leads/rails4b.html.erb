<% content_for :title, "Area Rails4B · #{@lead.name.presence || @lead.email}" %>

<div class="space-y-6">
  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <h1 class="text-3xl font-bold text-slate-900">Area Rails4B</h1>
    <p class="text-sm text-slate-600 mt-1">
      Rami collegati al lead <strong><%= @lead.name.presence || @lead.email %></strong>.
    </p>
    <%= link_to "← Torna al lead",
                superadmin_lead_path(@lead),
                class: "inline-flex items-center text-sm font-medium text-blue-600 hover:underline mt-3" %>
  </div>

  <% if @taxbranches.any? %>
    <div class="space-y-4">
      <% @taxbranches.each do |branch| %>
        <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
          <div class="flex items-start justify-between gap-3 flex-wrap">
            <div>
              <p class="text-xs uppercase tracking-wide text-slate-500">Taxbranch</p>
              <h2 class="text-xl font-semibold text-slate-900"><%= branch.display_label %></h2>
              <p class="text-sm text-slate-500">Slug: <%= branch.slug %></p>
            </div>
            <%= link_to "Apri",
                        superadmin_taxbranch_path(branch),
                        class: "inline-flex items-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800" %>
          </div>

          <div class="mt-4 grid gap-4 md:grid-cols-3 text-sm text-slate-600">
            <div>
              <p class="font-semibold text-slate-900">Journey</p>
              <p><%= branch.journeys.count %></p>
            </div>
            <div>
              <p class="font-semibold text-slate-900">Stato editoriale</p>
              <p><%= branch.status.humanize %></p>
            </div>
            <div>
              <p class="font-semibold text-slate-900">Visibilità</p>
              <p><%= branch.visibility.humanize %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="rounded-2xl border border-dashed border-slate-300 p-6 text-center text-slate-500">
      Nessun ramo collegato a questo lead.
    </div>
  <% end %>
</div>
