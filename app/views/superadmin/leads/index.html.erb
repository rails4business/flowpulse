<% content_for :title, "Leads" %>
<!-- app/views/leads/index.html.erb -->
<div class="max-w-5xl mx-auto p-6">
  <h1 class="text-2xl font-semibold mb-4">Leads in attesa di approvazione</h1>

  <% if @leads.any? %>
    <div class="overflow-x-auto border rounded-lg">
      <table class="min-w-full text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th class="text-left p-3">Created</th>
            <th class="text-left p-3">id</th>
            <th class="text-left p-3">Username</th>
            <th class="text-left p-3">Email</th>
            <th class="text-left p-3">Referral</th>
            <th class="text-left p-3">Stato</th>
            <th class="text-right p-3">Azioni</th>
          </tr>
        </thead>
        <tbody class="divide-y">
          <%= render @leads %> <!-- se aggiungi app/views/leads/_lead.html.erb -->
          <!-- oppure -->
          <% @leads.each do |lead| %>
            <%= render "row", lead: lead %>
          <% end %>
        </tbody>

       
      </table>
    </div>
  <% else %>
    <p class="text-slate-500">Nessun lead in attesa.</p>
  <% end %>
</div>
