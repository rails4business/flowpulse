<div id="<%= dom_id service %>" class="w-full max-w-sm my-5">
  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <div class="mb-3 overflow-hidden rounded-lg bg-slate-100 aspect-square">
      <% if service.image_url.present? %>
        <img src="<%= service.image_url %>" alt="<%= service.name %>" class="h-full w-full object-cover" />
      <% else %>
        <div class="flex h-full items-center justify-center text-slate-300">
          <svg class="h-12 w-12" viewBox="0 0 64 64" fill="none" aria-hidden="true">
            <rect x="12" y="12" width="40" height="40" rx="12" stroke="currentColor" stroke-width="2"></rect>
            <circle cx="32" cy="32" r="10" stroke="currentColor" stroke-width="2"></circle>
          </svg>
        </div>
      <% end %>
    </div>
    <div class="space-y-2">
      <h3 class="text-lg font-semibold text-slate-900"><%= service.name %></h3>
      <% if service.description.present? %>
        <p class="text-sm text-slate-600"><%= service.description %></p>
      <% end %>
      <% if service.price_enrollment_euro.present? %>
        <p class="text-sm font-semibold text-slate-800">
          <% if service.price_enrollment_euro.to_f.zero? %>
            Gratuito
          <% else %>
            <%= number_to_currency(service.price_enrollment_euro, unit: "â‚¬") %>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
</div>
