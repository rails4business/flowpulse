<% content_for :title, @service.name.presence || "Service ##{@service.id}" %>

<div class="space-y-6">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 text-green-600 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm space-y-4">
    <div class="flex flex-col gap-1">
      <h1 class="text-3xl font-bold text-slate-900"><%= @service.name.presence || "Servizio senza nome" %></h1>
      <p class="text-sm text-slate-500"><%= @service.description.presence || "Nessuna descrizione" %></p>
      <p class="text-xs text-slate-500">
        Slug:
        <code class="bg-slate-100 px-2 py-0.5 rounded"><%= @service.slug %></code>
      </p>
      <div class="flex flex-wrap gap-2 text-xs">
        <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 font-semibold text-slate-700">
          Journey collegati: <%= @service.journeys.count %>
        </span>
        <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 font-semibold text-slate-700">
          Eventi pianificati: <%= @service.eventdates.count %>
        </span>
      </div>
    </div>

    <div class="grid gap-4 md:grid-cols-2">
      <div class="rounded-xl border border-slate-100 bg-slate-50 p-4">
        <p class="text-xs uppercase tracking-wide text-slate-500">Taxbranch</p>
        <% if @service.taxbranch.present? %>
          <p class="mt-2 text-sm font-semibold">
            <%= link_to @service.taxbranch.display_label,
                        superadmin_taxbranch_path(@service.taxbranch),
                        class: "text-blue-600 hover:underline" %>
          </p>
          <% if (domain = @service.taxbranch.header_domain).present? %>
            <p class="text-xs text-slate-500">Dominio: <%= domain.title.presence || domain.host %></p>
          <% end %>
        <% else %>
          <p class="mt-2 text-sm text-slate-500">Nessun taxbranch associato.</p>
        <% end %>
      </div>
      <div class="rounded-xl border border-slate-100 bg-slate-50 p-4">
        <p class="text-xs uppercase tracking-wide text-slate-500">Ruoli coinvolti</p>
        <div class="mt-2 space-y-2 text-sm">
          <div>
            <span class="font-semibold">Ammessi:</span>
            <% if @service.allowed_roles.present? %>
              <span class="text-slate-700"><%= @service.allowed_roles.join(", ") %></span>
            <% else %>
              <span class="text-slate-500">Accesso aperto</span>
            <% end %>
          </div>
          <div>
            <span class="font-semibold">Rilasciati:</span>
            <% if @service.output_roles.present? %>
              <span class="text-slate-700"><%= @service.output_roles.join(", ") %></span>
            <% else %>
              <span class="text-slate-500">Non specificati</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <p class="text-sm font-semibold text-slate-800 mb-3">Rami collegati</p>
    <div class="grid gap-4 md:grid-cols-3 text-sm">
      <div class="rounded-lg border border-slate-100 bg-slate-50 p-3">
        <p class="text-xs uppercase tracking-wide text-slate-500">Frontline</p>
        <% if @frontline_branch.present? %>
          <p class="mt-1">
            <%= link_to @frontline_branch.display_label,
                        superadmin_taxbranch_path(@frontline_branch),
                        class: "text-blue-600 hover:underline" %>
          </p>
        <% else %>
          <p class="mt-1 text-slate-500">Nessun ramo pubblico associato.</p>
        <% end %>
      </div>
      <div class="rounded-lg border border-slate-100 bg-slate-50 p-3">
        <p class="text-xs uppercase tracking-wide text-slate-500">Rails4B</p>
        <% if @rails4b_branches.any? %>
          <ul class="mt-1 space-y-1">
            <% @rails4b_branches.each do |branch| %>
              <li>
                <%= link_to branch.display_label,
                            superadmin_taxbranch_path(branch),
                            class: "text-blue-600 hover:underline" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="mt-1 text-slate-500">Nessun ramo Officina collegato.</p>
        <% end %>
      </div>
      <div class="rounded-lg border border-slate-100 bg-slate-50 p-3">
        <p class="text-xs uppercase tracking-wide text-slate-500">Genera Impresa</p>
        <% if @generaimpresa_branches.any? %>
          <ul class="mt-1 space-y-1">
            <% @generaimpresa_branches.each do |branch| %>
              <li>
                <%= link_to branch.display_label,
                            superadmin_taxbranch_path(branch),
                            class: "text-blue-600 hover:underline" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="mt-1 text-slate-500">Nessuna campagna Genera Impresa collegata.</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid gap-4 md:grid-cols-3">
    <div class="rounded-xl border border-amber-200 bg-amber-50 p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-amber-800">Costi officina</p>
      <p class="mt-2 text-3xl font-bold text-amber-900"><%= number_to_currency(@production_cost_euro, unit: "€") %></p>
      <p class="text-xs text-amber-800 mt-1">Tempo: <%= (@production_minutes.to_f / 60).round(1) %> h</p>
    </div>
    <div class="rounded-xl border border-emerald-200 bg-emerald-50 p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-emerald-800">Ricavi iscrizioni</p>
      <p class="mt-2 text-3xl font-bold text-emerald-900"><%= number_to_currency(@enrollment_revenue_euro, unit: "€") %></p>
    </div>
    <div class="rounded-xl border border-emerald-200 bg-emerald-50 p-4 shadow-sm">
      <p class="text-xs uppercase tracking-wide text-emerald-800">Ricavi booking</p>
      <p class="mt-2 text-3xl font-bold text-emerald-900"><%= number_to_currency(@booking_revenue_euro, unit: "€") %></p>
      <p class="text-xs text-emerald-800 mt-1">Totale pubblico: <%= number_to_currency(@public_revenue_euro, unit: "€") %></p>
    </div>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <p class="text-sm font-semibold text-slate-800 mb-3">Azioni rapide</p>
    <div class="flex flex-col sm:flex-row flex-wrap gap-3">
      <%= link_to "Area Rails4B",
                  rails4b_superadmin_service_path(@service),
                  class: "inline-flex items-center justify-center rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to "Genera Impresa",
                  generaimpresa_superadmin_service_path(@service),
                  class: "inline-flex items-center justify-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500" %>
      <%= link_to "Modifica",
                  edit_superadmin_service_path(@service),
                  class: "inline-flex items-center justify-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-slate-800 border border-slate-200 shadow-sm hover:bg-slate-50" %>
      <%= link_to "Torna all'elenco",
                  superadmin_services_path,
                  class: "inline-flex items-center justify-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-slate-800 border border-slate-200 shadow-sm hover:bg-slate-50" %>
      <%= button_to "Elimina",
                    [:superadmin, @service],
                    method: :delete,
                    form_class: "inline",
                    class: "inline-flex items-center justify-center rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500",
                    data: { turbo_confirm: "Eliminare questo servizio?" } %>
    </div>
  </div>

  <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
    <details open class="space-y-3">
      <summary class="cursor-pointer text-sm font-semibold text-slate-800">Dettaglio tecnico</summary>
      <%= render @service %>
    </details>
  </div>
</div>
