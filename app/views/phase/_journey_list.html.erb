<div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm space-y-3">
  <div class="flex items-center justify-between gap-3">
    <h2 class="text-lg font-semibold text-slate-900">
      Journey â€” <%= phase_key.to_s.humanize %>
    </h2>
    <%= link_to "+ Journey",
                new_journey_path(taxbranch_id: @taxbranch.id, phase: phase_key),
                class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-1.5 text-xs font-semibold text-white hover:bg-slate-800" %>
  </div>

  <% if @journeys.any? %>
    <ul class="space-y-2 text-sm">
      <% @journeys.each do |journey| %>
        <li class="flex items-center justify-between gap-3 rounded-lg border border-slate-100 px-3 py-2">
          <div class="min-w-0">
            <p class="font-medium text-slate-900 truncate"><%= journey.title.presence || "Journey ##{journey.id}" %></p>
            <p class="text-xs text-slate-500 truncate"><%= journey.slug %></p>
            <p class="mt-1 text-[11px] text-slate-500">
              Tipo: <span class="font-semibold text-slate-700"><%= journey.kind.humanize %></span>
            </p>
          </div>
          <div class="flex items-center gap-2">
            <%= link_to "Apri",
                        journey_path(journey),
                        class: "text-blue-600 hover:underline text-xs font-semibold" %>
            <% if journey.template? %>
              <%= button_to "Duplica ciclo",
                            clone_cycle_journey_path(journey),
                            method: :post,
                            form_class: "inline",
                            class: "text-xs font-semibold text-emerald-700 hover:underline",
                            data: { turbo_confirm: "Creare un nuovo ciclo da questo template?" } %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-sm text-slate-500">Nessun journey in questa fase.</p>
  <% end %>
</div>
